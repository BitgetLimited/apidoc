		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"var CryptoJS = require('crypto-js')",
					"",
					"var apiSecret = pm.variables.get(\"secretKey\");",
					"var apiKey = pm.variables.get(\"apiKey\");",
					"var passphrase = pm.variables.get(\"passphrase\");",
					"var url = pm.variables.get(\"host\");",
					"var uri = pm.request.url.getPath();",
					"var method = pm.request.method;",
					"var expires = Date.now()",
					"var getBody = pm.request.url.getQueryString({ignoreDisabled:true});",
					"var jsonBody = pm.request.body.raw;",
					"",
					"//set params",
					"pm.variables.set(\"timestamp\", expires);",
					"",
					"",
					"var body = \"\";",
					"var requestUrl = url+uri;",
					"",
					"if(method == 'GET'){",
					"    if(getBody != ''){",
					"        body = \"?\"+getBody;",
					"    }",
					"    ",
					"    requestUrl = requestUrl+body;",
					"}else{",
					"    ",
					"    body = jsonBody;",
					"}",
					"var message = expires+method+uri+body;",
					"",
					"//console.info(\"sign-value:\"+message)",
					"//console.info(\"request-url:\"+requestUrl)",
					"pm.request.url = requestUrl;",
					"var hmac = CryptoJS.HmacSHA256(message,apiSecret);",
					"var base64 = CryptoJS.enc.Base64.stringify(hmac);",
					"pm.variables.set(\"sign\", base64);",
					"//console.info(\"sign:\"+base64)"
				]
			}
